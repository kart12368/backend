<body>

 {{>navbar}}
    <section class="landingmainsection" >
<div style="flex: 1; margin: 55px;">
    <h1 style="margin: 15px;" class="footheading">Counseling</h1>
    <h2 style="margin: 15px;">Sign in to your account</h2>
    <hr>
    <h3 style="margin: 15px;">Need an Company Account? <a href="/register">Create an account</a></h3>
        <form class="mainform" action="/login" method="POST" >
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input required type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email">
              <span id="username-error" class="error-message"></span>

            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input required type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
              <span id="password-error" class="error-message"></span>

            </div>
            <button style="margin: 15px;" type="submit" class="btn btn-primary btn-lg">Login</button>
          </form>
        </div>
            <div class="headingimage" style="flex: 1;"><img class="mainimage" src="images/save.webp" alt="" srcset=""></div>
    
    </section>
    
      
  {{>footer}}
  <script>
  const menuHamburger = document.querySelector(".menu-hamburger")
  const navLinks = document.querySelector(".nav-links")

  menuHamburger.addEventListener("click",() =>{
    navLinks.classList.toggle("mobile-menu")
  })
  document.getElementById("login-btn").addEventListener("click", function() {
  window.location.href = "/register";
});
    const form = document.getElementById('login-form');
  const usernameField = document.getElementById('username');
  const passwordField = document.getElementById('password');

  form.addEventListener('submit', (event) => {
    let isValid = true;

    // Check if the username is valid
    if (usernameField.value.trim() === '') {
      usernameField.classList.add('invalid');
      document.getElementById('username-error').textContent = 'Please enter a valid username';
      isValid = false;
    } else {
      usernameField.classList.remove('invalid');
      document.getElementById('username-error').textContent = '';
    }

    // Check if the password is valid
    if (passwordField.value.trim() === '') {
      passwordField.classList.add('invalid');
      document.getElementById('password-error').textContent = 'Please enter a valid password';
      isValid = false;
    } else {
      passwordField.classList.remove('invalid');
      document.getElementById('password-error').textContent = '';
    }

    // If the form is not valid, prevent submission
    if (!isValid) {
      event.preventDefault();
    }
  });

  // Remove the error message when the user clicks on the field again
  usernameField.addEventListener('click', () => {
    usernameField.classList.remove('invalid');
    document.getElementById('username-error').textContent = '';
  });

  passwordField.addEventListener('click', () => {
    passwordField.classList.remove('invalid');
    document.getElementById('password-error').textContent = '';
  });
</script>